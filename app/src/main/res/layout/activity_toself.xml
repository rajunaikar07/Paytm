<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ToselfActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backarrowid"
            android:layout_width="40dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="Help"
            android:onClick="help"
            android:textSize="22sp"
            android:textColor="#1E88E5"
            android:gravity="center"
            android:layout_marginLeft="130dp"/>
        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Settings"
            android:onClick="setting"
            android:textSize="22sp"
            android:textColor="#1E88E5"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Money to"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have added Karnataka Vikas Grameena Bank A/c XXXXX on Paytm UPI "
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add another bank account to transfer money between them"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/paytm"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:backgroundTint="#039BE5"
        android:onClick="addbank"
        android:text="Add New Bank Account "
        android:textStyle="bold"
        android:textSize="22sp"/>
</LinearLayout>